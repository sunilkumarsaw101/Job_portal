
<h1 class="header">Update Job</h1>
<% if(errorMessage){ %>
<div class="alert alert-danger" role="alert"><%= errorMessage %></div>
<%} %>
<form action="/jobs/updateJob" method="post">

    <input type="hidden" class="form-control" id="id" name="id" value='<%=job.id %>' </" />

  <div class="form-group">
    <label for="jobCategory">Job Category</label>
    <input
      type="text"
      class="form-control"
      id="jobCategory"
      name="jobCategory"

      value='<%=job.jobCategory %>'
    />
  </div>
  <div class="form-group">
    <label for="jobDesignation">Job Designation</label>
    <input
      type="text"
      class="form-control"
      id="jobDesignation"
      name="jobDesignation"
      value='<%=job.jobDesignation %>'

    />
  </div>
  <div class="form-group">
    <label for="jobLocation">Job Location</label>
    <input
      type="text"
      class="form-control"
      id="jobLocation"
      name="jobLocation"
      value='<%=job.companyName %>'

    />
  </div>
  <div class="form-group">
    <label for="companyName">Company Name</label>
    <input
      type="text"
      class="form-control"
      id="companyName"
      name="companyName"
      value='<%=job.companyName %>'

    />
  </div>
  <div class="form-group">
    <label for="salary">Salary</label>
    <input type="text" class="form-control" id="salary" name="salary" 
    value='<%=job.salary %>'

     />
  </div>
  <div class="form-group">
    <label for="applyBy">Apply Before</label>
    <input type="date" class="form-control" id="applyBy" name="applyBy"
    value='<%=job.applyBy %>'
    
    />
  </div>
  <div class="form-group">
    <label for="skillsRequired">Skills Required</label>
    <input
      type="text"
      class="form-control"
      id="skillsRequired"
      name="skillsRequired"
      value='<%=job.skillsRequired %>'

    />
  </div>
  <div class="form-group">
    <label for="numberOfOpenings">Number Of Openings</label>
    <input
      type="text"
      class="form-control"
      id="numberOfOpenings"
      name="numberOfOpenings"
      value='<%=job.numberOfOpenings %>'

    />
  </div>
  <div class="form-group">
    <label for="jobPosted">Job Posting Date</label>
    <input type="date" class="form-control" id="jobPosted" name="jobPosted"
    value='<%=job.jobPosted %>'   
    />
  </div>

  <button type="submit" class="btn btn-success">Submit</button>
  <button
    type="button"
    class="btn btn-primary"
    onclick="window.location.href='/jobs'"
  >
    Cancel
  </button>
</form>
